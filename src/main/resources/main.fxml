<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainController">
    <VBox prefHeight="400.0" prefWidth="600.0">
        <Label fx:id="LastMessageTextLabel" textAlignment="CENTER" wrapText="true" text="Последнее сообщение">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Label>
        <Label fx:id="WaterControlTextLabel" textAlignment="CENTER" wrapText="true" text="Состояние уровня воды">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Label>
        <Label fx:id="PumpControlTextLabel" textAlignment="CENTER" wrapText="true" text="Состояние насоса">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Label>
        <ButtonBar buttonOrder="U+">
            <buttons>
                <Button fx:id="startWaterButton" mnemonicParsing="false" onAction="#startPump" text="Пустить воду"
                        disable="true"/>
                <Button fx:id="stopWaterButton" mnemonicParsing="false" onAction="#stopPump" text="Остановить воду"
                        disable="true"/>
            </buttons>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </ButtonBar>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
</AnchorPane>
